<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/database_layout"
    android:padding="50dp"
    android:background="#cbcdff"
    tools:context="com.example.ashik.studentbudgetmanagement.HomeFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:id="@+id/show_database"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#F2C22E"
        android:text="Show Expenses" />

    <Button
        android:id="@+id/delete_database"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/show_database"
        android:layout_centerHorizontal="true"
        android:layout_margin="5dp"
        android:background="#F2C22E"
        android:text="Delete Budget" />

        <Button
            android:id="@+id/reset_database"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/delete_database"
            android:layout_centerHorizontal="true"
            android:layout_margin="5dp"
            android:background="#F2C22E"
            android:text="Reset Budget" />


    </RelativeLayout>

</FrameLayout>

